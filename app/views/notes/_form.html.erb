<%= form_for(note) do |f| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="textField">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="date">
    <%= f.label :date %>
    <div class="dateSelect input-group date" id="datetimepicker1">
      <%= f.text_field :date %>
      <span class="input-group-addon">
        <span class="glyphicon glyphicon-calendar"></span>
      </span>
    </div>
  </div>

  <div class="textArea">
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <div class="actions">
    <%= f.submit "Save" %>
  </div>

  <script type="text/javascript">
    $(function () {
      $('#datetimepicker1').datetimepicker({
        format: 'YYYY/MM/DD LT',
        showTodayButton: true,
        showClear: true,
      });
    });
  </script>
<% end %>
