<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @note.name %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @note.date.strftime("%B %d @ %I:%M %p") %>
  </p>

  <p>
    <strong>Note:</strong>
    <%= @note.note %>
  </p>

  <div class="btns">
    <%= link_to 'Edit', edit_note_path(@note), :type => "button", :class => "button btn-index" %>
    <%= link_to 'Back', notes_path, :type => "button", :class => "button btn-index" %>
    <%= link_to 'Main Menu', welcome_index_path, :type => "button", :class => "button btn-index" %>
  </div>
</div>
